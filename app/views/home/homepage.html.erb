<style>

.banner{
	width:60%;
	margin:0 auto;
	position: relative;
}
 .resize{
		resize: 
		width : auto;
		width : 100%;
		height : auto;

	}



	.newlayer{
		display: none;
		z-index: 1;
		position: absolute;
		top:25%;
		width:100%;
		height: 30%;
