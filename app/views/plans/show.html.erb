	.tc{
		text-align: center;
	}
	.col-md-3{
		margin-bottom: 100px;
		margin-top: 100px;
		border-style: dashed;
		border-width: 1px;
		height: 600px;
	}


	.col-md-6{
		text-align: left;
		padding-left: 100px;
	}
	#img_list{
		text-align: right;
		padding-right: 100px; 
	}
	i{
		color: rgb(63,178,176);
		text-align: center;
	}
	.btn{
		background-color:rgba(90,178,176,1);
		color:white;
		font-size: 16px;
	}
	.navi{
		margin: 30px;
		text-align: right;

	}
	a{
		color:rgba(80,178,176,1);
		font-weight: 300px;
	}

</style>
