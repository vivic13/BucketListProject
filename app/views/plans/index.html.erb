<div>
	<h1 class="tc"><i class="fa fa-smile-o" aria-hidden="true"></i>
Bucket Lists</h1>
</div>

<div class="container">
	<div class="row">
		<div class="col-md-6" id="left">

		<%= link_to '新增願望?', new_plan_path ,class:"btn"%>

		<%= link_to 'Go_to_Latest', latest_plans_path ,class:"btn"%>
		
		

		</div>
		<div class="col-md-6" id="right">	
			<%= form_tag plans_path, :method => :get do %>
			  <%= text_field_tag "keyword" %>
			  <%= submit_tag "Search" %>
			<% end %>
			<%= link_to '依預計完成日排序', plans_path( :order => "title") %>
			<%= link_to '預設排序', plans_path %>
		</div>
	</div>
</div>

<div class="container">
	<div class="row">
		<% @plans.each do |p| %>
			<div class="col-md-4">
				<table class="table table-bordered">
				<tr>
				  <th class="table-info">願望主題</th>
					<th class="table-info">預計完成日</th>
				</tr>
				
						<tr>
					<td><%= p.title%></td>
					<td><%= p.duedate%></td>
				</tr>
				<tr>
					<td colspan="2"><%= image_tag p.file_location.url %></td>
				</tr>
				<tr>
					<td colspan="2"><%= link_to 'Detail', plan_path(p) %> </td>
				</tr>
				</table>
			</div>			 	
		<% end %>
	</div>
</div>
<style>
	.tc{
		text-align: center;
		padding-bottom: 50px;

	}
	#right{
		padding-bottom: 50px;
		text-align: right
	}
	.col-md-4 :hover{
		background-color: rgba(245,245,238,1);
	}
	td,th{
		text-align: center;
	}
	i{
		color: rgb(63,178,176);
		text-align: center;
	}
	.btn{
		background-color:rgba(90,178,176,1);
		color:white;
		font-size: 16px;
		border-radius: 50px 50px;
	}
	a{
		color:rgba(80,178,176,1);
		font-weight: 300px;
	}
</style>
