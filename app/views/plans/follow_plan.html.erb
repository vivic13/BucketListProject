</div>

<div class="container">
	<div class="row">
  
		<% @plans.each do |p| %>
			<div class="col-md-4">
				<table class="table table-bordered">
					<tr>
					  <th><%= p.title%></th>
						
					</tr>
					
					<tr>
						<td>預計完成日: <%= p.duedate%></td>
						
					</tr>
