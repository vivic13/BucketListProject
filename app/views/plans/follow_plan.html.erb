<div class="toolbox">
	<div class="dropdown">
		<a class="dropdown-toggle" data-toggle="dropdown" href="#"><i class="fa fa-search-plus  fa-2x" aria-hidden="true">清單放大鏡</i><span class="caret"></span></a>
		<ul class="dropdown-menu">
			<li><%= link_to '新增願望?', new_plan_path%></li>
