<div class="container">
	<h1>大家的lists </h1>
	
</div>

<div class="container">
	
	
	
	<p><i class="fa fa-tag " aria-hidden="true">依願望分類搜尋：

	<% TagCategory.all.each do |t| %>

		<i class="fa fa-tag " aria-hidden="true"><%= link_to t.name, tag_category_path(t.id)%>&nbsp;&nbsp;</i>
						
	<% end %>

	</i></p>
	<p><i class="fa fa-sort" aria-hidden="true"><%= link_to '依最多留言排序', latest_plans_path( :order => "comments_count") %></i>&nbsp;&nbsp;<i class="fa fa-sort" aria-hidden="true"><%= link_to '依最後更新排序', latest_plans_path( :last =>"plan_update") %></i>&nbsp;&nbsp;<i class="fa fa-sort" aria-hidden="true"><%= link_to '依最後回覆排序', latest_plans_path %></i></p>

	
</div>

<div class="container">
	<div class="row">
  
		<% @plans.each do |p| %>
			<div class="col-md-4">
				<table class="table table-bordered">
					<tr>
					  <th><%=truncate(p.title, length: 20) %></th>
						
					</tr>
					
					<tr>
						<td>預計完成日: <%= p.duedate%></td>
						
					</tr>
					<tr>
						<td>最近更新: <%= time_tag(p.updated_at) %></td>
						
					</tr>

					<tr>
						<td><%= image_tag p.file_location ,class:"resize-latest" %></td>
					</tr>
					<tr>
						
						<% @user= User.find_by(:nickname => p.host) %>
						<td><%= link_to p.host, user_path(@user.to_param) %>
						<% p.tag_categories.each do |t| %>
		   			<i class="fa fa-tag" aria-hidden="true"><%= t.name %></i>
						<% end %>
						</td>
					</tr>
					
					<tr>
						<td><%= link_to 'Detail', plan_path(p) %> </td>
					</tr>
				</table>	
			</div>
		<% end %>
	 
	</div>
</div>

