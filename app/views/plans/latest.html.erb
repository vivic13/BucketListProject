<h1 class="tc"> Latest Plan </h1>
<div class="bt">
<%= link_to 'Go_to_HomePage', plans_path ,class:"btn btn-primary btn-xs"%>
</div>
<div class="container">
	<div class="row">
  
		<% @plans.each do |p| %>
			<div class="col-md-3">
				<table class="table table-bordered">
					<tr>
					  	<th class="success">願望主題</th>
						<th class="success">預計完成日</th>
					</tr>
					
					<tr>
						<td><%= p.title%></td>
						<td><%= p.duedate%></td>
					</tr>
					<tr>
						<td colspan="2"><%= image_tag p.file_location %></td>
					</tr>
					<tr>
						<td colspan="2"><%=p.user.nickname %></td>
					</tr>
					<tr>
						<td colspan="2"><%= link_to 'Detail', plan_path(p) %> </td>
					</tr>
				</table>	
			</div>
		<% end %>
	 
	</div>
</div>

<style>
	.tc{
		text-align: center
	}
	.bt{
		padding-bottom: 50px;
	}
</style>