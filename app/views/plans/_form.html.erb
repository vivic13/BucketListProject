<% if @plan.errors.present?%>
  <ul>
        <% @plan.errors.each do |error, message|%>
          <li> <%= "#{error.capitalize}  #{message}" %></li>
        <% end %>
  </ul>
<% end%>





<%= form_for(@plan) do |f| %> 
 	<div>
		<%= f.label :title, "願望主題" %>
		<%= f.text_field :title %>
	</div>
	<div>
		<%= f.label :duedate, "預計完成日" %>
		<%= f.text_field :duedate %>
	</div>
	<div>
		<%= f.label :plan, "Plan計畫" %>
		<%= f.text_field :plan %>
	</div>
	<div>
		<%= f.label :do_what, "Do執行" %>
		<%= f.text_field :do_what %>
	</div>
	<div>
		<%= f.label :check, "Check檢視" %>
		<%= f.text_field :check %>
	</div>
	<div>
		<%= f.label :act, "Action行動" %>
		<%= f.text_field :act %>
	</div>
    <div>
    	<%= f.radio_button :is_public,true,:value=>true%>
    	<%= f.label :is_public, "公開",:value=>true%>
		<%= f.radio_button :is_public,false,:value=>false%>		
		<%= f.label :is_public, "私人",:value=>false%>
	</div>

    <div>
    	<%= f.label :img_location, "上傳圖片" %>
		<%= f.text_field :img_location %>
  	</div>

  	 <div>
    	<%= f.radio_button :progress,"only_title",:value=>"only_title"%>
    	<%= f.label :progress, "剛決定願望",:value=>"only_title"%>
		<%= f.radio_button :progress,"start_plan",:value=>"start_plan"%>
		<%= f.label :progress, "Plan計畫",:value=>"start_plan"%>
		<%= f.radio_button :progress,"start-do",:value=>"start_do"%>
		<%= f.label :progress, "Do行動",:value=>"start_do"%>
		<%= f.radio_button :progress,"start-check",:value=>"start_check"%>
		<%= f.label :progress, "Check檢視",:value=>"start_check"%>
		<%= f.radio_button :progress,"start-act",:value=>"start_act"%>
		<%= f.label :progress, "Action行動",:value=>"start_act"%>
		<%= f.radio_button :progress,"completion",:value=>"completion"%>
		<%= f.label :progress, "完成計畫",:value=>"completion"%>




	</div>

	<div>
	<%= f.submit "送出"%>
	</div>    

<% end %>

<%= link_to 'Back_to_Home', plans_path ,class:"btn btn-primary btn-xs"%>