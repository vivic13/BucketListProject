<h2>編輯 <%= resource_name.to_s.humanize %></h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= devise_error_messages! %>

  <div class="field">
    <%= f.label :email, "電子郵件地址" %><br />
    <%= f.email_field :email, autofocus: true %>
  </div>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
  <% end %>

  <div class="field">
    <%= f.label :password, "更新密碼" %> <i>(如果沒有要更新密碼，請空白)</i><br />
    <%= f.password_field :password, autocomplete: "off" %>
    <% if @minimum_password_length %>
      <br />
      <em><%= @minimum_password_length %> characters minimum</em>
    <% end %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation, "確認密碼" %><br />
    <%= f.password_field :password_confirmation, autocomplete: "off" %>
  </div>

  <div class="field">
    <%= f.label :current_password ,"目前密碼"%> <i>(請提供目前密碼)</i><br />
    <%= f.password_field :current_password, autocomplete: "off" %>
  </div>
  <div class="field">
    <%= f.label :nickname ,"暱稱" %><br />
    <%= f.text_field :nickname%>
  </div>

  <div class="field">
    <%= f.label :last_name ,"姓氏" %><br />
    <%= f.text_field :last_name %>
  </div>


  <div class="field">
    <%= f.submit "更新個人資訊" ,class:"btn" %><br>

  <% end %>

 
    <%#= button_to "取消帳戶", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete, class:"btn" %>

    <%= link_to "回到上ㄧ頁", :back %>
  
</div>

