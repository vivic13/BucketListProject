<h1>Hi Admin! 這是後台首頁 </h1>

<div>
	<%= link_to '新增Admin願望?', new_listadmin_plan_path%>
</div>

<div class="container">
	<div class="row">
		<% @plans.each do |p| %>
			<div class="col-md-4">
				<table class="table table-bordered">
				<tr>
				  <th class="table-info"><%= p.title%></th>
				</tr>
				
				<tr>
					<td>預計完成日: <%= p.duedate%></td>
				</tr>
				<tr>
					<td colspan="2"><%= image_tag p.file_location ,class:"resize"%></td>
				</tr>
				<tr>
					<td colspan="2">是否公開: <%= p.is_public %></td>
				</tr>
				<tr>
					<td colspan="2">主辦人: <%= p.host %></td>
				</tr>
				<tr>
					<td>
						<% p.tag_categories.each do |t| %>
		   			<i class="fa fa-tag" aria-hidden="true"><%= t.name %></i>
						<% end %>
					</td>
				</tr>
				<tr>
					<td colspan="2"><%= link_to 'Detail', listadmin_plan_path(p) %> </td>
				</tr>
				</table>
			</div>			 	
		<% end %>
	</div>
</div>