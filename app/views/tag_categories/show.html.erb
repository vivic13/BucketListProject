<h1> 
 <i class="fa fa-tag " aria-hidden="true"><%= @tag.name %></i>
</h1>

<div class="container">

		<% TagCategory.all.each do |t| %>

		   	<i class="fa fa-tag " aria-hidden="true"><%= link_to t.name, tag_category_path(t.id)%>&nbsp;&nbsp;</i>

						
		<% end %>
		<i class="fa fa-tag " aria-hidden="true"><%= link_to "所有", latest_plans_path %></i>

</div>
<div class="container">
	<div class="row">
		<% @plans.each do |p| %>
			<div class="col-md-4">
				<table class="table table-bordered">
				<tr>
				  <th class="table-info"><%= p.title%></th>
				</tr>
				
				<tr>
					<td>預計完成日: <%= p.duedate%></td>
				</tr>
				<tr>
					<td colspan="2"><%= image_tag p.file_location ,class:"resize"%></td>
				</tr>
				<tr>
					<td colspan="2">是否公開: <%= p.is_public %></td>
				</tr>
				<tr>
					<td>
						<% p.tag_categories.each do |t| %>
		   			<i class="fa fa-tag" aria-hidden="true"><%= t.name %></i>
						<% end %>
					</td>
				</tr>
				<tr>
					<td colspan="2"><%= link_to 'Detail', plan_path(p) %> </td>
				</tr>
				</table>
			</div>			 	
		<% end %>
	</div>
</div>